<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/tools"
    android:id="@+id/rib_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/tv_play_questionNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        test:text="1/10"
        android:gravity="end"
        android:paddingVertical="20dp"
        android:layout_marginVertical="5dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


        <LinearLayout
            android:id="@+id/ll_play_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fl_questionBlock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:id="@+id/tv_play_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                test:text="Maria"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"

                />

            <TextView
                android:id="@+id/tv_play_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                test:text="35466"
                android:textSize="20dp"

                />

        </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_questionBlock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll_play_top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="20dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>
